<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /

    # Não reescrever arquivos e diretórios existentes
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Redirecionar tudo para index.php
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Segurança: bloquear acesso direto a arquivos PHP em assets
<FilesMatch "\.(php)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Permitir apenas index.php
<Files "index.php">
    Allow from all
</Files>